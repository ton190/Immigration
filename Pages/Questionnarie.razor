                        <InputSelect @bind-Value="Model.SpouseLanguageSkills.English" id="spouse_english">
                            <option value=0>@Localizer["qe s3 o1"]</option>
                            <option value=1>@Localizer["qe s3 o2"]</option>
                            <option value=2>@Localizer["qe s3 o3"]</option>
