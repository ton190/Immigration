                    <legend>@Localizer["qe s t3"]</legend>
                    <div>
                        <label for="spouse_school_years">@Localizer["qe s4 p1"]</label>
                        <InputNumber type="number" min="0" @bind-Value="Model.SpouseEducation.SchoolYears" id="spouse_school_years"/>
