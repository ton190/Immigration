                        </InputSelect>
                    </div>
                    <div>
                        <label for="franch">@Localizer["qe s3 p1"]</label>
                        <InputSelect @bind-Value="Model.SpouseLanguageSkills.Franch" id="spouse_franch">
                            <option value=0>@Localizer["qe s3 o1"]</option>
                            <option value=1>@Localizer["qe s3 o2"]</option>
