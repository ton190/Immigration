                            <option value=0>@Localizer["qe s4 p2 o1"]</option>
                            <option value=1>@Localizer["qe s4 p2 o2"]</option>
                            <option value=2>@Localizer["qe s4 p2 o3"]</option>
                            <option value=3>@Localizer["qe s4 p2 o4"]</option>
