                    <div>
                        <label for="spouse_name">@Localizer["qe s2 p3"]</label>
                        <InputText type="text" @bind-Value="Model.SpousePersonalInformation.Name" id="spouse_name"/>
                        <ValidationMessage For="@(() => Model.SpousePersonalInformation.Name)"/>
                    </div>
                    <div>
